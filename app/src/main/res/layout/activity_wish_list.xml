<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/wishlist_back_iv"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/arrow_left"
            android:layout_marginStart="5dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/wishlist_wishlist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위시리스트"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="30dp"/>

        <ImageView
            android:id="@+id/wishlist_cart_iv"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/shop_cart"
            android:gravity="end"
            android:layout_marginStart="180dp"
            android:padding="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/wishlist_keep_iv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/save_circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#4D4D4F"
            android:textSize="18sp"
            android:text="내 위시리스트에 추가"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="다시 보고 싶은 제품을 저장해 보세요. 위시 리스트에 있는 제품은\n 회원님만 볼 수 있습니다." />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>