<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="example_ID님이 회원님의 스토리를 \n좋아합니다. 2주"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingTop="3dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_activitiy_profile"
        app:layout_constraintEnd_toStartOf="@id/item_activity_img"/>

    <ImageView
        android:id="@+id/item_activitiy_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/item_activity_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_activitiy_profile"
        app:layout_constraintBottom_toBottomOf="@id/item_activitiy_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>