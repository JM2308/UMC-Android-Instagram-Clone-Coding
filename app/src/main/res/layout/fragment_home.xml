<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_text_logo"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:background="@drawable/instagram_text_logo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/home_dm_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/share"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/home_text_logo"
        app:layout_constraintBottom_toBottomOf="@id/home_text_logo"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/home_heart_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/heart"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/home_text_logo"
        app:layout_constraintBottom_toBottomOf="@id/home_text_logo"
        app:layout_constraintEnd_toStartOf="@id/home_dm_btn" />

    <ImageButton
        android:id="@+id/home_add_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/add"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/home_text_logo"
        app:layout_constraintBottom_toBottomOf="@id/home_text_logo"
        app:layout_constraintEnd_toStartOf="@id/home_heart_btn" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_my_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_text_logo"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/home_my_story_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/profile"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/home_my_story_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/add_story"
            app:layout_constraintBottom_toBottomOf="@id/home_my_story_profile"
            app:layout_constraintEnd_toEndOf="@id/home_my_story_profile" />

        <TextView
            android:id="@+id/home_my_story_text"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:text="내 스토리"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/home_my_story_profile"
            app:layout_constraintEnd_toEndOf="@id/home_my_story_profile"
            app:layout_constraintTop_toBottomOf="@id/home_my_story_profile" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_my_story" />

</androidx.constraintlayout.widget.ConstraintLayout>