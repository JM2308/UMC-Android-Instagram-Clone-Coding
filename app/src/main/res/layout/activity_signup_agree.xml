<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/signup_agree_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약관 동의"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/signup_agree_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instagram은 회원님의 개인 정보를 안전하게 보호합니다. 새 계정을 만들려면 모든 약관에 동의하세요."
        android:gravity="center"
        android:textSize="12sp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/signup_agree_title" />

    <TextView
        android:id="@+id/signup_agree_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모두 동의"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/signup_agree_text"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/signup_agree_all_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/signup_agree_uncheck"
        android:layout_margin="10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/signup_agree_all"
        app:layout_constraintBottom_toBottomOf="@id/signup_agree_all"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/signup_agree_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/signup_agree_all"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signup_agree_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 약관(필수)"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/signup_agree_line"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signup_agree_service_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 알아보기"
        android:textColor="@color/dark_blue"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:paddingBottom="7dp"
        app:layout_constraintTop_toBottomOf="@id/signup_agree_service"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/signup_agree_service_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/signup_agree_uncheck"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/signup_agree_service"
        app:layout_constraintBottom_toBottomOf="@id/signup_agree_service_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/signup_agree_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이터 정책(필수)"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/signup_agree_service_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signup_agree_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 알아보기"
        android:textColor="@color/dark_blue"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:paddingBottom="7dp"
        app:layout_constraintTop_toBottomOf="@id/signup_agree_data"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/signup_agree_data_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/signup_agree_uncheck"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/signup_agree_data"
        app:layout_constraintBottom_toBottomOf="@id/signup_agree_data_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/signup_agree_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치 기반 기능(필수)"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/signup_agree_data_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signup_agree_gps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 알아보기"
        android:textColor="@color/dark_blue"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:paddingBottom="7dp"
        app:layout_constraintTop_toBottomOf="@id/signup_agree_gps"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/signup_agree_gps_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/signup_agree_uncheck"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/signup_agree_gps"
        app:layout_constraintBottom_toBottomOf="@id/signup_agree_gps_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/signup_agree_next_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_agree_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:background="@drawable/round_border_unclick_blue"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>