<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ImageView
        android:id="@+id/item_story_border"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/item_story_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/profile"
        app:layout_constraintTop_toTopOf="@id/item_story_border"
        app:layout_constraintBottom_toBottomOf="@id/item_story_border"
        app:layout_constraintStart_toStartOf="@id/item_story_border"
        app:layout_constraintEnd_toEndOf="@id/item_story_border"/>

    <ImageView
        android:id="@+id/item_story_add"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@id/item_story_profile"
        app:layout_constraintEnd_toEndOf="@id/item_story_profile" />

    <TextView
        android:id="@+id/item_home_story_id"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:text="example_ID"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/item_story_profile"
        app:layout_constraintEnd_toEndOf="@id/item_story_profile"
        app:layout_constraintTop_toBottomOf="@id/item_story_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>